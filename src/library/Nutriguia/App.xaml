<Application x:Class="Nutriguia.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nutriguia"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnExplicitShutdown"
             xmlns:helpers="clr-namespace:Nutriguia.Helpers"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:syntax="http://schemas.lepo.co/wpfui/2022/xaml/syntax"
             >
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />

            </ResourceDictionary.MergedDictionaries>

            <helpers:ThemeToIndexConverter x:Key="ThemeToIndexConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
    
</Application>