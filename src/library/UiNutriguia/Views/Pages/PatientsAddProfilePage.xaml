<Page x:Class="UiNutriguia.Views.Pages.PatientsAddProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UiNutriguia.Views.Pages"
      xmlns:models="clr-namespace:UiNutriguia.Models"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance local:PatientsAddProfilePage,
                     IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      Title="PatientsAddProfilePage">

    <Grid>
        <!--<ui:Snackbar Title="Title" Appearance="Secondary"/>-->
        <StackPanel>
            <TextBlock Text="Añadir perfil nutricional" FontSize="25" Margin="10,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Paciente: " FontSize="15" Margin="10,0" />
                <TextBlock Text="{Binding SelectedPatientName}" FontSize="15" Margin="10,0" />
            </StackPanel>
        </StackPanel>
        
        <Grid Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.4*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="GridPatient" Grid.Column="0" MinWidth="500px" Margin="0,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0" Margin="10,5">
                    <Label Content="Altura (cm)" />
                    <ui:NumberBox x:Name="nbHeight" MaxLength="3"/>
                </StackPanel>

                <StackPanel Grid.ColumnSpan="2" Grid.Column="2" Grid.Row="0" Margin="10,5">
                    <Label Content="Sexo"/>
                    <ComboBox x:Name="cbSex" SelectedValuePath="Tag" SelectedValue="{Binding SelectedSex}">
                        <ComboBoxItem Content="Femenino" Tag="F" />
                        <ComboBoxItem Content="Masculino" Tag="M" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="1" Margin="10,5">
                    <Label Content="Objetivo"/>
                    <ComboBox x:Name="cbObjective" ItemsSource="{Binding ViewModel.Objectives}" DisplayMemberPath="Code" SelectedValue="{Binding SelectedObjective}" />
                </StackPanel>

                <StackPanel Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="2" Margin="10,5">
                    <Label Content="Nivel de actividad"/>
                    <ComboBox x:Name="cbActivity" ItemsSource="{Binding ViewModel.Activities}" DisplayMemberPath="Code" SelectedValue="{Binding SelectedActivity}"/>
                </StackPanel>

                <StackPanel Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="3" Margin="10,5">
                    <Label Content="Distribución de macronutrientes"/>
                    <ComboBox x:Name="cbMacronutrient" ItemsSource="{Binding ViewModel.Macronutrients}" DisplayMemberPath="Code" SelectedValue="{Binding SelectedMacronutrient}"/>
                </StackPanel>

                <ui:Button Content="Guardar" Grid.ColumnSpan="4" Grid.Row="4" Margin="10,20,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="SaveProfile"/>

            </Grid>

            <StackPanel Grid.Column="1" Margin="50,100,50,0" HorizontalAlignment="Center">
                <!--<Image Source="/Resources/Images/human.png" VerticalAlignment="Center" HorizontalAlignment="Center"/>-->
                <ui:SymbolIcon Symbol="SlideTextPerson48" FontSize="100"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
