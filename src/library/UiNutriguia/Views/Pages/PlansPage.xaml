<Page x:Class="UiNutriguia.Views.Pages.PlansPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UiNutriguia.Views.Pages"
      mc:Ignorable="d"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance local:PlansPage,
               IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      Title="PlansPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <ui:AutoSuggestBox Margin="0" DisplayMemberPath="FullName" UpdateTextOnSelect="True" 
                       OriginalItemsSource="{Binding ViewModel.Patients}"
                       Text="{Binding ViewModel.FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        
        <Grid Grid.Row="1" Visibility="{Binding ViewModel.GridVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Titulo-->
            <StackPanel Grid.Row="0" Margin="0,25">
                <ui:TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Text="Plan Nutricional Activo" />
                <ui:TextBlock FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Text="Nombre de plan nutricional" />
                <ui:TextBlock FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Text="Descripción de plan nutricional" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Opcion 1-->
                <Border Grid.Column="0" Margin="0,0,10,0"
                        Background="{ui:ThemeResource SolidBackgroundFillColorBaseBrush}" CornerRadius="5">
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.8*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.8*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" >
                            <ui:Button Icon="{ui:SymbolIcon Add28}" HorizontalAlignment="Right" Margin="10,0,10,10"
                                       Command="{Binding ViewModel.GotoAddPlanOptionCommand}"/>
                        </Grid>

                        <StackPanel Grid.Row="0" Margin="0,10">
                            <ui:TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="DemiBold"
                              Text="Opción 1"/>
                            <Separator Margin="0,5,0,0"/>
                        </StackPanel>

                        <Border Grid.Row="1" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Desayuno" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel>
                                    <ui:TextBlock FontSize="25" Margin="0,10,0,2" FontWeight="Light" HorizontalAlignment="Center" Text="{Binding ViewModel.PlanPatient.PlanModel.PlanOptionModel1.BreakfastModel.Dish.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <ui:TextBlock FontWeight="Light" Text="{Binding ViewModel.PlanPatient.PlanModel.PlanOptionModel1.BreakfastModel.Dish.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Colación" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="3" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Comida" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Colación" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="5" Margin="20,10" CornerRadius="5"  Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Cena" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Border>

                <!--Opcion 2-->
                <Border Grid.Column="1" Margin="5,0,5,0" Background="{ui:ThemeResource SolidBackgroundFillColorBaseBrush}" CornerRadius="5">
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.8*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.8*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" >
                            <ui:Button Icon="{ui:SymbolIcon Add28}" HorizontalAlignment="Right" Margin="10,0,10,10"/>
                        </Grid>

                        <StackPanel Grid.Row="0" Margin="0,10">
                            <ui:TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="DemiBold"
                                  Text="Opción 2"/>
                            <Separator Margin="0,5,0,0"/>
                        </StackPanel>

                        <Border Grid.Row="1" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Desayuno" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Colación" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="3" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Comida" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Colación" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="5" Margin="20,10" CornerRadius="5"  Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Cena" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Border>

                <!--Opcion 3-->
                <Border Grid.Column="2" Margin="10,0,0,0" Background="{ui:ThemeResource SolidBackgroundFillColorBaseBrush}" CornerRadius="5">
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.8*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.8*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" >
                            <ui:Button Icon="{ui:SymbolIcon Add28}" HorizontalAlignment="Right" Margin="10,0,10,10"/>
                        </Grid>

                        <StackPanel Grid.Row="0" Margin="0,10">
                            <ui:TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="DemiBold"
                  Text="Opción 3"/>
                            <Separator Margin="0,5,0,0"/>
                        </StackPanel>

                        <Border Grid.Row="1" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Desayuno" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Colación" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="3" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Comida" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4" Margin="20,10" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Colación" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="5" Margin="20,10" CornerRadius="5"  Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Cena" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Border>
            </Grid>

        </Grid>

        <DockPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding ViewModel.MessageVisibility}">
            <ui:TextBlock Text="No se encontró un plan nutricional activo para paciente " FontSize="28" FontWeight="Light" />
            <ui:TextBlock Text="{Binding ViewModel.SelectedPatient.FullName}" FontSize="28" />
        </DockPanel>

        <DockPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding ViewModel.ChooseMessageVisibility}">
            <ui:TextBlock Text="Seleccione un paciente para visualizar su plan nutricional" FontSize="28" FontWeight="Light" />
        </DockPanel>

        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <ui:Button HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="40" Content="Añadir plan nutricional nuevo"
                       Command="{Binding ViewModel.AddNewPlanCommand}"/>
        </StackPanel>
    </Grid>
    
</Page>
