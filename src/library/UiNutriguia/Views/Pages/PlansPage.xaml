                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ui:ListView>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4" Margin="20,5" CornerRadius="5" Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Colación" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ui:TextBlock FontSize="16" Margin="0,5,0,2" HorizontalAlignment="Center" Text="{Binding ViewModel.PlanPatient.PlanModel.PlanOptionModel3.Collation2Model.Dish.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Separator Width="300"/>
                                <ui:ListView ItemsSource="{Binding ViewModel.PlanPatient.PlanModel.PlanOptionModel3.Collation2Model.Dish.DishFoodModel}"
                                             ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" MaxHeight="60">
                                    <ListView.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:DishFoodModel}">
                                            <DockPanel>
                                                <ui:TextBlock Grid.Column="1" Text="{Binding Food.Name}" Margin="0,0,5,0" FontSize="14"/>
                                                <DockPanel HorizontalAlignment="Right">
                                                    <ui:TextBlock Grid.Column="1" Text="{Binding Quantity}" Margin="0,0,10,0" FontSize="14"/>
                                                    <ui:TextBlock Grid.Column="1" Text="{Binding Food.Unit.Code}" Margin="0,0,10,0" FontSize="14"/>
                                                </DockPanel>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ui:ListView>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="5" Margin="20,5" CornerRadius="5"  Background="{ui:ThemeResource SolidBackgroundFillColorTertiaryBrush}" >
                            <StackPanel>
                                <Border CornerRadius="5,5,0,0" Height="30" Background="{ui:ThemeResource SolidBackgroundFillColorQuarternaryBrush}" >
                                    <ui:TextBlock Text="Cena" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ui:TextBlock FontSize="16" Margin="0,5,0,2" HorizontalAlignment="Center" Text="{Binding ViewModel.PlanPatient.PlanModel.PlanOptionModel3.DinnerModel.Dish.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Separator Width="300"/>
                                <ui:ListView ItemsSource="{Binding ViewModel.PlanPatient.PlanModel.PlanOptionModel3.DinnerModel.Dish.DishFoodModel}"
                                             ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" MaxHeight="60">
                                    <ListView.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:DishFoodModel}">
                                            <DockPanel>
                                                <ui:TextBlock Grid.Column="1" Text="{Binding Food.Name}" Margin="0,0,5,0" FontSize="14"/>
                                                <DockPanel HorizontalAlignment="Right">
                                                    <ui:TextBlock Grid.Column="1" Text="{Binding Quantity}" Margin="0,0,10,0" FontSize="14"/>
                                                    <ui:TextBlock Grid.Column="1" Text="{Binding Food.Unit.Code}" Margin="0,0,10,0" FontSize="14"/>
                                                </DockPanel>
                                            </DockPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ui:ListView>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Border>
            </Grid>

        </Grid>

        <DockPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding ViewModel.MessageVisibility, UpdateSourceTrigger=PropertyChanged}">
            <ui:TextBlock Text="No se encontró un plan nutricional activo para paciente " FontSize="28" FontWeight="Light" />
            <ui:TextBlock Text="{Binding ViewModel.SelectedPatient.FullName, UpdateSourceTrigger=PropertyChanged}" FontSize="28" />
        </DockPanel>

        <DockPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding ViewModel.ChooseMessageVisibility, UpdateSourceTrigger=PropertyChanged}">
            <ui:TextBlock Text="Seleccione un paciente para visualizar su plan nutricional" FontSize="28" FontWeight="Light" />
        </DockPanel>

        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <ui:Button HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="40" Content="Añadir plan nutricional nuevo"
                       Command="{Binding ViewModel.AddNewPlanCommand, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
    
</Page>
