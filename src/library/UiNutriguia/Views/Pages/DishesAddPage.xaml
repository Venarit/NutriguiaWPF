<Page x:Class="UiNutriguia.Views.Pages.DishesAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UiNutriguia.Views.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance local:DishesAddPage,
               IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      Title="DishesAddPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ui:TextBlock Grid.Row="0" Margin="5,0,0,10" Text="Agregar Platillo" FontTypography="Title" />

        <Grid Grid.Row="1" Margin="5,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                <ui:TextBlock Text="Nombre: " FontSize="23" FontWeight="Light" Margin="0,0"/>
                <ui:TextBox Margin="10,0,0,0" />
            </DockPanel>
            <DockPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,0">
                <ui:TextBlock Text="Tipo: " FontSize="23" FontWeight="Light" Margin="0,0"/>
                <ComboBox ItemsSource="{Binding ViewModel.DishTypes}" DisplayMemberPath="Code"/>
            </DockPanel>
            <DockPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,10,0,0">
                <ui:TextBlock Text="Descripción: " FontSize="23" FontWeight="Light" Margin="0,0"/>
                <ui:TextBox Margin="10,0,0,0" />
            </DockPanel>
        </Grid>

        <Border Grid.Row="2" Margin="5,5" CornerRadius="15"
                Background="{ui:ThemeResource ControlFillColorDefaultBrush}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <ui:Button Grid.Row="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5"
                               Icon="{ui:SymbolIcon Add28}" FontSize="18" FontWeight="Light" Padding="10">
                        <ui:TextBlock Text="Añadir ingrediente" FontSize="20" FontWeight="Light"/>
                    </ui:Button>
                    <ListView Margin="5,5"
                              ItemsSource="{Binding ViewModel.Dish.DishFoodModel}" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </Border>
        
    </Grid>
</Page>
